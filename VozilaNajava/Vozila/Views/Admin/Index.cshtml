@model AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="dashboard-container">

        <!-- LEFT SIDEBAR -->
        <div class="sidebar">
            <h2>Admin Menu</h2>

            <h3>Companies</h3>
            <div class="dropdown-menu-item">
                <select>
                    <option>Select company...</option>
                    @foreach (var c in Model.Companies)
                    {
                        <option value="@c.Id">@c.CustomerName</option>
                    }
                </select>
            </div>

            <h3>Destinations</h3>
            <div class="dropdown-menu-item">
                <select>
                    <option>Select destination...</option>
                    @foreach (var d in Model.Destinations)
                    {
                        <option value="@d.Id">@d.CityName</option>
                    }
                </select>
            </div>

            <h3>Transporters</h3>
            <div class="dropdown-menu-item">
                <select>
                    <option>Select transporter...</option>
                    @foreach (var t in Model.Transporters)
                    {
                        <option value="@t.Id">@t.CompanyName</option>
                    }
                </select>
            </div>
        </div>

        <!-- MAIN CONTENT AREA -->
        <div class="main-content">

            <!-- TABS / HEADER BUTTONS -->
            <div class="header-tabs">
                <a asp-controller="PriceOil" asp-action="Index">
                    <i class="fa-solid fa-gas-pump"></i> PriceOil
                </a>

                <a asp-controller="Contract" asp-action="Index">
                    <i class="fa-solid fa-file-contract"></i> Contract
                </a>

                <a asp-controller="Order" asp-action="Index">
                    <i class="fa-solid fa-truck"></i> Order
                </a>
            </div>

            <h1>Welcome to Admin Dashboard</h1>
            <p>Choose items from the menu or tabs above.</p>

        </div>
    </div>
</body>
<style>
    .dashboard-container {
        display: flex;
        height: 100vh;
        font-family: Arial;
    }

    /* Sidebar */
    .sidebar {
        width: 260px;
        background: #2c3e50;
        color: white;
        padding: 20px;
    }

        .sidebar h3 {
            margin-top: 20px;
            color: #ecf0f1;
            border-bottom: 1px solid #7f8c8d;
            padding-bottom: 8px;
        }

    .dropdown-menu-item {
        margin: 10px 0;
    }

    select {
        width: 100%;
        padding: 6px;
        border-radius: 5px;
        border: none;
    }

    /* Main */
    .main-content {
        flex: 1;
        background: #f4f6f7;
        padding: 25px;
    }

    /* Header tabs */
    .header-tabs {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

        .header-tabs a {
            padding: 10px 20px;
            background: #3498db;
            color: white;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }

            .header-tabs a:hover {
                background: #1f78b4;
            }

</style>
</html>