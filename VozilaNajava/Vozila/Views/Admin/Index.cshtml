@model AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
<div class="dashboard-container">
        <!-- LEFT SIDEBAR -->
        <div class="sidebar">
            <h2>Admin Menu</h2>

                <!-- Companies -->
                <h3>Companies</h3>
                <div class="dropdown-menu-item">
                    <select id="companySelect" class="form-select" onchange="filterByCompany()">
                        <option value="">Select company...</option>
                        @foreach (var c in Model.Companies)
                        {
                            <option value="@c.Id">@c.CustomerName</option>
                        }
                    </select>
                    <div class="action-buttons mt-2">
                        <button class="btn btn-primary" onclick="createNew('company')">New</button>
                        <button class="btn btn-warning" onclick="editSelected('company')">Edit</button>
                        <button class="btn btn-danger" onclick="deleteSelected('company')">Delete</button>
                    </div>
                </div>

                <!-- Destinations -->
                <h3>Destinations</h3>
                <div class="dropdown-menu-item">
                    <select id="destinationSelect" class="form-select" onchange="filterByDestination()">
                        <option value="">Select destination...</option>
                        @foreach (var d in Model.Destinations)
                        {
                            <option value="@d.Id">@d.CityName</option>
                        }
                    </select>
                    <div class="action-buttons mt-2">
                        <button class="btn btn-primary" onclick="createNew('destination')">New</button>
                        <button class="btn btn-warning" onclick="editSelected('destination')">Edit</button>
                        <button class="btn btn-danger" onclick="deleteSelected('destination')">Delete</button>
                    </div>
                </div>

                <!-- Transporters -->
                <h3>Transporters</h3>
                <div class="dropdown-menu-item">
                    <select id="transporterSelect" class="form-select" onchange="filterByTransporter()">
                        <option value="">Select transporter...</option>
                        @foreach (var t in Model.Transporters)
                        {
                            <option value="@t.Id">@t.CompanyName</option>
                        }
                    </select>
                    <div class="action-buttons mt-2">
                        <button class="btn btn-primary" onclick="createNew('transporter')">New</button>
                        <button class="btn btn-warning" onclick="editSelected('transporter')">Edit</button>
                        <button class="btn btn-danger" onclick="deleteSelected('transporter')">Delete</button>
                    </div>
                </div>
        </div>

        <!-- HEADER AREA WITH TABS + LOGOUT -->
        <div class="header-bar d-flex justify-content-between align-items-center">
                <div class="header-tabs">
                    <a class="tab-btn" asp-controller="PriceOil" asp-action="Index">
                        <i class="fa-solid fa-gas-pump"></i> PriceOil
                    </a>
                    <a class="tab-btn" asp-controller="Contract" asp-action="Index">
                        <i class="fa-solid fa-file-contract"></i> Contract
                    </a>
                    <a class="tab-btn" asp-controller="Order" asp-action="Index">
                        <i class="fa-solid fa-truck"></i> Order
                    </a>
                </div>

                <!-- Quick Actions -->
                <div class="admin-actions">
                    <a href="@Url.Action("ManagePriceOil", "Admin")" class="action-btn btn-primary">
                        <i class="fas fa-edit"></i> PriceOil
                    </a>
                    <a href="@Url.Action("ManageContract", "Admin")" class="action-btn btn-success">
                        <i class="fas fa-clipboard"></i> Contract
                    </a>
                    <a href="@Url.Action("ManageOrder", "Admin")" class="action-btn btn-info">
                        <i class="fas fa-user-cog"></i> Order
                    </a>
                </div>
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
            <h1>🚀 Admin Dashboard</h1>
            <p>Select an item from the menu or use the header buttons.</p>
    </div>
</div>
</body>

