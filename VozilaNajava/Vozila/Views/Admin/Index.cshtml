            console.log('Filter by company:', companyId);
            // TODO: AJAX call to fetch filtered data
        }

        function filterByDestination() {
            const destinationId = document.getElementById('destinationSelect').value;
            console.log('Filter by destination:', destinationId);
            // TODO: AJAX call to fetch filtered data
        }

        function filterByTransporter() {
