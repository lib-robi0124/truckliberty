@using Vozila.Domain.Enums
@model IEnumerable<OrderListVM>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Orders</h1>
        <a href="@Url.Action("OrderCreate", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Order
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                    <h5>No orders found</h5>
                    <p class="text-muted">Create your first order to get started</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Company</th>
                                <th>Transporter</th>
                                <th>Destination</th>
                                <th>Loading Dates</th>
                                <th>Status</th>
                                <th>Truck</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.CompanyName</td>
                                    <td>@order.TransporterName</td>
                                    <td>@order.DestinationCity</td>
                                    <td>
                                        @order.DateForLoadingFrom.ToString("MMM dd") -
                                        @order.DateForLoadingTo.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.StatusName
                                        </span>
                                    </td>
                                    <td>@(order.TruckPlateNo ?? "Not assigned")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })"
                                               class="btn btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("OrderEdit", "Admin", new { id = order.Id })"
                                               class="btn btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("OrderDelete", "Admin")"
                                                  onsubmit="return confirm('Are you sure you want to delete this order?');"
                                                  style="display:inline">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "badge-warning",
            OrderStatus.Approved => "badge-info",
            OrderStatus.Finished => "badge-success",
            OrderStatus.Cancelled => "badge-danger",
            _ => "badge-secondary"
        };
    }
}
