@model Vozila.ViewModels.Models.LoginViewModel
@{
    ViewData["Title"] = "Најава - Vozila";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-card">
                    <div class="login-header">
                        <h2><i class="fas fa-chart-bar me-2"></i>Vozila</h2>
                        <p class="mb-0">Внесете ги вашите податоци за најава</p>
                    </div>
                    <div class="login-body">
                        @{
                            var finishMsg = TempData["FinishMessage"] as string;
                            var alreadySubmittedMsg = TempData["AlreadySubmittedMessage"] as string;
                            var qsMsg = Context.Request.Query["message"].ToString();
                            if (!string.IsNullOrWhiteSpace(finishMsg) || qsMsg == "thankyou")
                            {
                                <div class="alert alert-success mb-3">Blagodaram</div>
                            }
                            if (!string.IsNullOrWhiteSpace(alreadySubmittedMsg))
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="fas fa-info-circle me-2"></i>@alreadySubmittedMsg
                                </div>
                            }
                        }
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-id-card me-1"></i>Email za pristap</label>
                                <input asp-for="Email" class="form-control form-control-lg"
                                       placeholder="Внесете го вашиот Email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock me-1"></i>Лозинка
                                </label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg"
                                       placeholder="Внесете ја вашата лозинка" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-login btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Најави се
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <small class="text-muted">
                                За помош контактирајте го ИТ одделот
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Error Modal -->
    <div class="modal fade" id="loginErrorModal" tabindex="-1" aria-labelledby="loginErrorLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="loginErrorLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Грешка при најава
                    </h5>
                </div>
                <div class="modal-body" id="loginErrorMessage">
                    Погрешен ID или лозинка. Ве молиме проверете ги вашите податоци.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="loginErrorOk">
                        <i class="fas fa-check me-1"></i>Во ред
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var errorMsg = '@Html.Raw(TempData["LoginError"] as string ?? "")';
            var qsError = '@(Context.Request.Query["error"].ToString())';
            var shouldShow = !!errorMsg || !!qsError;
            if (shouldShow) {
                var modalEl = document.getElementById('loginErrorModal');
                var modalBodyEl = document.getElementById('loginErrorMessage');
                var okBtn = document.getElementById('loginErrorOk');

                // Update modal body with actual error message if available
                if (errorMsg && modalBodyEl) {
                    modalBodyEl.textContent = errorMsg;
                }

                if (modalEl && window.bootstrap && typeof window.bootstrap.Modal === 'function') {
                    var modal = new window.bootstrap.Modal(modalEl);
                    modal.show();
                    okBtn && okBtn.addEventListener('click', function () {
                        modal.hide();
                        // Clear the form fields on close
                        var passwordField = document.querySelector('input[type="password"]');
                        if (passwordField) passwordField.value = '';
                    });
                } else {
                    alert(errorMsg || 'Погрешен ID или лозинка');
                    var passwordField = document.querySelector('input[type="password"]');
                    if (passwordField) passwordField.value = '';
                }
            }
        });
    </script>
</body>
</html>